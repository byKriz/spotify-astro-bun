---
import type { Playlist } from "@/lib/data";
import { artistsList } from "@/services/utiles";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { albumId, artists, color, cover, id, title } = playlist;
const artistsString = artistsList(artists);
---

<a
  href={`/playlist/${id}`}
  class="playlist-item transition-all duration-300 flex relative p-2 pb-5 overflow-hidden items-center gap-2 rounded-md hover:bg-zinc-800 shadow-lg hover:shadow-xl bg-zinc-500/30 z-10 w-44 flex-col"
  transition:name={`playlist ${id} box`}
>
  <picture class="aspect-square w-full h-auto flex-none">
    <img
      src={cover}
      alt={`Cover ot ${title} by ${artistsString}`}
      class="object-cover w-full h-full rounded-md"
      transition:name={`playlist ${id} image`}
    />
  </picture>

  <div class="flex flex-auto flex-col truncate justify-start w-full">
    <!-- truncate sirve para que si el texto es muy largo, lo cambie por puntos suspensivos -->
    <h4 class="text-white text-sm" transition:name={`playlist ${playlist?.id} title`}>
      {title}
    </h4>
    <span class="text-xs text-gray-400" transition:name=`playlist ${id} artists`>
      {artistsString}
    </span>
  </div>
</a>
